<h1 class="text-4xl text-center mt-4">View <%= current_user.need&.id == @need.id ? 'your' : '' %> help request</h1>

<h3 class="text-xl italic text-center mt-4">
  <%= @need.description %>
</h3>

<div class="w-full h-50vh mt-8" data-controller="show-map" data-lat="<%= @need.lc_lat %>" data-lng="<%= @need.lc_lng %>"></div>

<% if current_user.need %>
  <div class="flex justify-center mt-8">
    <%= link_to 'Edit your request', edit_my_need_path, class: 'p-8 bg-blue-500 block text-white text-xl' %>
  </div>
<% end %>
