<section class="mt-4 md:mt-8 text-center">
  <h1 class="text-4xl"><%= t('.welcome') %></h1>
  <p>
    <%= t('.line1') %>
    <br>
    <%= t('.line2') %>
    <br>
    <%= t('.line3') %>
    <br>
    <%= t('.line4') %>
  </p>
</section>

<h3 class="text-xl text-center mt-4">
  <%= t('.currently') %>
  <%= t('.volunteer', count: User.where(kind: :volunteer).count) %>
  <%= t('common.and') %>
  <%= t('.recipient', count: User.where(kind: :recipient).count) %>
</h3>

<div class="flex items-center flex-col my-8">
  <% if logged_in? && current_user.recipient? %>
    <% if current_user.need %>
      <%= link_to t('.view_your_request'), my_need_path, class: 'p-8 bg-blue-500 block text-white text-xl' %>
    <% else %>
      <%= link_to t('.create_request'), new_my_need_path, class: 'p-8 bg-blue-500 block text-white text-xl' %>
    <% end %>
  <% elsif logged_in? %>
    <%= link_to t('.view_requests'), needs_path, class: 'p-8 bg-blue-500 block text-white text-xl' %>
  <% else %>
    <%= form_with url: '/auth', method: :post, class: "text-center my-8 flex flex-col items-center w-full" do %>
      <h3 class="text-lg mb-1"><%= t('.call_to_action') %></h3>
      <div class="flex w-full md:w-1/2">
        <%= email_field_tag :email, '', class: "string text-xl border rounded p-2 flex-1" %>
        <%= submit_tag t('common.go'), class: "rounded bg-blue-600 px-6 py-2 text-xl ml-2 text-white" %>
      </div>
    <% end %>
  <% end %>
</div>

<% if !logged_in? %>
<div class="grid grid-cols-2 gap-16 mt-8">
  <div>
    <h3 class="text-2xl text-center"><%= t('.volunteer_block.header') %></h3>
    <p>
      <%= t('.volunteer_block.text') %>
    </p>
  </div>
  <div>
    <h3 class="text-2xl text-center"><%= t('.recipient_block.header') %></h3>
    <p>
      <%= t('.recipient_block.text') %>
    </p>
  </div>
</div>
<% end %>

<h3 class="text-3xl text-center">
  <%= t('.questions') %>
  <a href="/qa" class="text-blue-500 underline"><%= t('.click_here') %></a>
</h3>
